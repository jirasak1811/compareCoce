block content
  // Modal
  #editModal.modal.fade(tabindex='-1' role='dialog' aria-labelledby='editModalLabel' aria-hidden='true')
    .modal-dialog(role='document')
      .modal-content
        .modal-header
          h5#editModalLabel.modal-title Editor
            button.close(type='button' data-dismiss='modal' aria-label='Close')
              span(aria-hidden='true') Ã—
        .modal-body
          input#status.form-control.input-sm(type='hidden' placeholder='' )
          input#now_ID.form-control.input-sm(type='hidden' placeholder='' )
          input#now_nRow.form-control.input-sm(type='hidden' placeholder='' )
          .form-body.pal.row
            .form-group
              label.col-md-3.control-label(for='inputID') Email ID
              .col-md-9
                .input-icon.right
                  i.fa.fa-user
                  input#inputID.form-control.input-sm(type='text' placeholder='' disabled)
            .form-group(style="padding-top: 30px;")
              label.col-md-3.control-label(for='inputEmail') Email Address
              .col-md-9
                .input-icon.right
                  i.fa.fa-user
                  input#inputEmail.form-control.input-sm(type='text' placeholder='')


        .modal-footer
          button.btn.btn-secondary(type='button' data-dismiss='modal') Close
          button#btn_save.btn.btn-success(type='button') Save changes

  #page-wrapper
    // BEGIN TITLE & BREADCRUMB PAGE
    #title-breadcrumb-option-demo.page-title-breadcrumb
      .page-header.pull-left
        .page-title=title
      ol.breadcrumb.page-breadcrumb.pull-left
        li
          i.fa.fa-home
          
          a(href='/b2e/') Home
           
          i.fa.fa-angle-right
          &nbsp;
        li.hidden
          a(href='#')=title
          i.fa.fa-angle-right
        li.active=title

      .clearfix

    .page-content
      .row
        .col-lg-12
          .portlet.box
            .portlet-header
              .caption Emails Manager
              .btn_insert
                a#btn_insert.btn-sm.btn-success(href='javascript:;' style='margin-left: 20px;')
                  i.fa.fa-plus  
                  |  Add New

            .portlet-body
              .table-responsive
                table#editable.table.table-striped.table-bordered.table-hover(style='border-bottom:1px solid #ddd')
                  thead
                    tr
                      th Email ID
                      th Send To
                      th Edit
                      th Delete
                  tbody



