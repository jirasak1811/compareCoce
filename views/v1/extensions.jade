block content
	// Content Header (Page header)
	section.content-header
		h1
			label(data-i18n='extensions') Extensions
			small(data-i18n='extension') extension
			//|  
			//button.btn-ext-add.btn.btn-success(type='button', disabled='') 
				i.fa.fa-plus
				| Add Extension
		ol.breadcrumb
			li
				a(href='/api/v1/extensions?access_token=' + token)
					i.fa.fa-group
					label(data-i18n='extensions')  Extensions
			li.active(data-i18n='-extension') extension
	// Main content
	section.content
		.row
			.col-md-12
				.box.box-primary
					.box-header.with-border
						//button.btn-ext-add.btn.btn-success(type='button') 
							i.fa.fa-plus
							|  Add Extension
						//|  
						//button.btn-ext-add-range.btn.bg-purple(type='button') 
							i.fa.fa-plus-square
							label(data-i18n='Create Extension Range')  Create Extension Range
						//|  
						//button.btn-ext-move-to-org.btn.btn-warning(type='button') 
							i.fa.fa-sitemap
							label(data-i18n='Move to Organize')  Move to Organize
					.box-body.ext-list
					.box-footer.no-padding
					
	.modal.ext-modal-add-ext.fade(tabindex='-1', role='dialog')
		.modal-dialog
			.modal-content
				.modal-header
					button.close(type='button', data-dismiss='modal', aria-label='Close')
						span(aria-hidden='true') ×
					h4.modal-title(data-i18n='Create Extension') Create Extension
				.modal-body
					form#newExtensionForm.form-horizontal
						.form-group
							label.col-sm-2.control-label(for='inputAddExt' , data-i18n='extension') Extension
							.col-sm-10
								input#inputAddExt.form-control(name='ext', type='number', placeholder='Extension' , data-i18n='[placeholder]extension')
						.form-group
							label.col-sm-2.control-label(for='inputAddExtName' , data-i18n='Name') Name
							.col-sm-10
								input#inputAddExtName.form-control(name='name', type='text', placeholder='Name' , data-i18n='[placeholder]Name')
						// radio
						.form-group(style='display:none;')
							label.col-sm-2.control-label(for='selectAddExtType',data-i18n='Type') Type
							.col-sm-10
								.col-sm-4
									input.form-control.flat-blue(type='radio', name='exttype', data-val='Normal', checked='')
									label(data-i18n='Normal')  Normal
								.col-sm-4
									input.form-control.flat-blue(type='radio', name='exttype', data-val='VIP', disabled='')
									label(data-i18n='VIP')  VIP
								.col-sm-4
									input.form-control.flat-blue(type='radio', name='exttype', data-val='Guest', disabled='')
									label(data-i18n='Guest')  Guest
									input#selectAddExtType.form-control(name='exttypeval', type='hidden', value='Normal')

						.form-group
							label.col-sm-2.control-label(for='inputAddExtAuthrizeCode' , data-i18n='Auth Code') Auth. Code
							.col-sm-10
								input#inputAddExtAuthrizeCode.form-control(name='authcode', type='text', placeholder='Authorize Code' , data-i18n='[placeholder]Authorize Code')
						.form-group
							.col-sm-offset-2.col-sm-10
								.checkbox
										input#cbAddExtLicense.minimal(name='lic', type='checkbox', checked='')
										label
										label(data-i18n='islicense?') Is License?
										input#inputAddExtLicense.form-control(name='licval', type='hidden', value='1')
										//a(href='#') terms and conditions
				.modal-footer
					button.btn.btn-default(type='button', data-dismiss='modal' , data-i18n='cancel') Cancel
					button.btn-ext-add-ok.btn.btn-primary(type='button' , data-i18n='add') Add
			// /.modal-content
		// /.modal-dialog
	// /.modal
	
	.modal.view-detail.fade(tabindex='-1', role='dialog')
		.modal-dialog.modal-lg
			.modal-content
				.modal-header
					button.close(type='button', data-dismiss='modal', aria-label='Close')
						span(aria-hidden='true') ×
					h4.modal-title(data-i18n='extensions') Extensions
				.modal-body#view-detail-body
				.modal-footer
			// /.modal-content
		// /.modal-dialog
	.modal.ext-modal-add-range.fade(tabindex='-1', role='dialog')
		.modal-dialog.modal-lg
			.modal-content
				.modal-header
					button.close(type='button', data-dismiss='modal', aria-label='Close')
						span(aria-hidden='true') ×
					h4.modal-title(data-i18n='Create Extension Range') Create Extension Range
				.modal-body
					form#newExtensionRangeForm.form-horizontal
						.form-group
							label.col-sm-2.control-label(for='inputFromExt' , data-i18n='extension') Extension
							.col-sm-10
								input#inputFromExt.form-control(name='ext_from', type='number', placeholder='From Extension' , data-i18n='[placeholder]from extension')
						.form-group
							label.col-sm-2.control-label(for='inputToExt', data-i18n='through') Through
							.col-sm-10
								input#inputToExt.form-control(name='ext_to', type='number', placeholder='To Extension' , data-i18n='[placeholder]to extension')
						.form-group
							label.col-sm-2.control-label(for='inputAddRangeExtName' , data-i18n='Name') Name
							.col-sm-7
								input#inputAddRangeExtName.form-control(name='name', type='text', placeholder='Name' , data-i18n='[placeholder]Name')
							.col-sm-3
								.checkbox
										input#cbSameNameExtension.cb-same-extname-minimal(type='checkbox')
										label(data-i18n='same extension?') Same Extension?
										input#inputSameNameExtension.form-control(name='sameext', type='hidden', value='0')
						// radio
						.form-group(style='display:none;')
							label.col-sm-2.control-label(for='selectAddRangeExtType' , data-i18n='Type') Type
							.col-sm-10
								.col-sm-4
									input.form-control.flat-blue(type='radio', name='exttype', data-val='Normal', checked='')
									label(data-i18n='Normal')  Normal
								.col-sm-4
									input.form-control.flat-blue(type='radio', name='exttype', data-val='VIP', disabled='')
									label(data-i18n='VIP')  VIP
								.col-sm-4
									input.form-control.flat-blue(type='radio', name='exttype', data-val='Guest', disabled='')
									label(data-i18n='Guest')  Guest
									input#selectAddRangeExtType.form-control(name='exttypeval', type='hidden' value='Normal')

						.form-group
							label.col-sm-2.control-label(for='inputAddRangeExtAuthrizeCode' , data-i18n='Auth Code') Auth. Code
							.col-sm-7
								input#inputAddRangeExtAuthrizeCode.form-control(name='authcode', type='text', placeholder='Authorize Code' , data-i18n='[placeholder]Authorize Code')
							.col-sm-3
								.checkbox
										input#cbSameAuthCodeExtension.cb-same-authcode-minimal(type='checkbox')
										label(data-i18n='same extension?') Same Extension?
										input#inputSameAuthCodeExtension.form-control(name='sameauthcode', type='hidden', value='0')
						.form-group
							.col-sm-offset-2.col-sm-10
								.checkbox
										input#cbAddRangeExtLicense.minimal(type='checkbox', checked='')
										label(data-i18n='islicense?') Is License?
										input#inputAddRangeExtLicense.form-control(name='licval', type='hidden', value='1')
										//a(href='#') terms and conditions
				.modal-footer
					button.btn.btn-default(type='button', data-dismiss='modal' , data-i18n='cancel') Cancel
					button.btn-ext-add-range-ok.btn.btn-primary(type='button' , data-i18n='add') Add
			// /.modal-content
		// /.modal-dialog
	// /.modal

