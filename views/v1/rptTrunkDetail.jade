extend ../layout2
extend etbsRoles

block header

block content

	// Content Header (Page header)
	section.content-header
		h1
			label(data-i18n='Report') Reports
			small(data-i18n='trunks') Trunks
		ol.breadcrumb
			li
				a(href='/api/v1/reports/trunk?access_token=' + token)
					i.fa.fa-group
					label(data-i18n='Report') Reports
			li.active(data-i18n='trunks') Trunks
	// Main content
	section.content
		// Small boxes (Stat box)
		.row
			include rptMenuLayout

			.col-md-9
				.modal-content
					.modal-header
						h4.modal-title(data-i18n='trunk detail report') Trunk Detail Report
					.modal-body
						form#newTrunkForm.form-horizontal
							.form-group
								label.col-sm-2.control-label(for='dtpDateTimeFrom' , data-i18n="reportdate") Report Date
								.col-sm-10
									.row
										.col-sm-6
											select#optReportDate.form-control
												option(value='Today' , data-i18n='Today') Today
												option(value='Yesterday',data-i18n='Yesterday') Yesterday
												option(value='This Week',data-i18n='This Week') This Week
												option(value='Last Week',data-i18n='Last Week') Last Week
												option(value='This Month',data-i18n='This Month') This Month
												option(value='Last Month',data-i18n='Last Month') Last Month
												option(value='Year to date',data-i18n='Year to date') Year to date
												option(value='Manual Select',data-i18n='Manual Select') Manual Select
							.form-group
								label.col-sm-2.control-label(for='dtpDateTimeFrom' , data-i18n="DateTimeFrom") Date Time From
								.col-sm-10
									.row
										.col-sm-6
											input#dtpDateFrom.form-control(name='date_from' type='date')
										.col-sm-6
											input#dtpTimeFrom.form-control(name='time_from' type='time' step="1")
							.form-group
								label.col-sm-2.control-label(for='dtpDateTimeTo' , data-i18n="DateTimeTo") Date Time To
								.col-sm-10
									.row
										.col-sm-6
											input#dtpDateTo.form-control(name='date_to' type='date')
										.col-sm-6
											input#dtpTimeTo.form-control(name='time_to' type='time' step="1")
							.form-group
								label.col-sm-2.control-label(for='ckbTollType' , data-i18n='toll type') Toll Type
								.col-sm-10
									label.checkbox-inline
										input#ckbTollTypeUnknown(type='checkbox' value='unknown')
										label(data-i18n = 'unknown') Unknow
									label.checkbox-inline
										input#ckbTollTypeHotline(type='checkbox' value='hotline' checked='checked')
										label(data-i18n = 'hotline') Hot Line
									label.checkbox-inline
										input#ckbTollTypeLocal(type='checkbox' value='local' checked='checked')
										label(data-i18n = 'local') Local
									label.checkbox-inline
										input#ckbTollTypeMobile(type='checkbox' value='mobile' checked='checked')
										label(data-i18n = 'mobile') Mobile
									label.checkbox-inline
										input#ckbTollTypeDomestic(type='checkbox' value='domestic' checked='checked' )
										label(data-i18n = 'domestic') Domestic
									label.checkbox-inline
										input#ckbTollTypeInternational(type='checkbox' value='international' checked='checked')
										label(data-i18n = 'international') International

							.form-group
								label.col-sm-2.control-label(for='ckbCallType' , data-i18n='call type') Call Type
								.col-sm-10
									label.checkbox-inline
										input#ckbCallTypeInternal(type='checkbox' value='internal')
										label(data-i18n='internal') Internal
									label.checkbox-inline
										input#ckbCallTypeIncoming(type='checkbox' value='incoming')
										label(data-i18n='incoming') Incoming
									label.checkbox-inline
										input#ckbCallTypeOutgoing(type='checkbox' value='outgoing' checked='checked')
										label(data-i18n='outgoing') Outgoing
							.form-group
								label.col-sm-2.control-label(for='txtRouteFrom' , data-i18n='from route') From Route
								.col-sm-10
									.row
										.col-sm-6
											input#txtRouteFrom.form-control(name='txtRouteFrom' type='text')
							.form-group
								label.col-sm-2.control-label(for='txtRouteTo' , data-i18n='to route') To Route
								.col-sm-10
									.row
										.col-sm-6
											input#txtRouteTo.form-control(name='txtRouteTo' type='text')
							.form-group
								label.col-sm-2.control-label(for='txtTrunkFrom' , data-i18n='from trunk') From Trunk
								.col-sm-10
									.row
										.col-sm-6
											input#txtTrunkFrom.form-control(name='txtTrunkFrom' type='text')
							.form-group
								label.col-sm-2.control-label(for='txtTrunkTo' , data-i18n='to trunk') To Trunk
								.col-sm-10
									.row
										.col-sm-6
											input#txtTrunkTo.form-control(name='txtTrunkTo' type='text')

							
					.modal-footer
						button.btn-rpt-ok.btn.btn-primary(type='button',data-i18n="viewreport") View Report

block script
	script(type='text/javascript' src='/javascripts/moment.js')
	script(type='text/javascript' src='/javascripts/optReportDate.js')
	script(type='text/javascript' src='/javascripts/app.func.js')
	script(type='text/javascript' src='/javascripts/rptTrunkDetail.js')
